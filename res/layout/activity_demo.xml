<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pipelinestatistics"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/demo_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/bg_col_blue" >
        

        <TextView
            android:id="@+id/pipelinestatisticstitletextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </RelativeLayout>

   

    <com.lighted.android.bargraph.view.BarView
        android:id="@+id/barview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/demo_title"        
        android:background="@color/white" />

</RelativeLayout>